body
	height 1000px

.side-menu
	color: #fff
	@extend .col-md-2
	padding 0
	height 1000px	
	background-color #2C4762
	.logo-widget
		border-bottom 1px solid #fff
		padding 10px
		.logo
			&__img
				margin-left 30px
				@extend .col-md-3
				@extend .col-xs-4
				img
					@extend .img-responsive
			&__text
				font-size 20px
				@extend .col-md-7
				@extend .col-xs-6
				color #fff
.user-widget
	border-bottom 1px solid #fff
	padding 10px 0
	.user
		
		a
			color: #fff
		&__img
			margin-left 26px
			@extend .col-md-5
			@extend .col-xs-4
			img
				@extend .img-responsive
				border-radius 76px
		&__name
			margin-top 20px
			@extend .col-md-5
			@extend .col-xs-4
			font-size 20px
.list
	margin-top 20px
	list-style: none
	font-size: 20px
	padding: 0
	li
		padding: 10px 0
		text-align: left;
		width: 119px;
		margin 0 auto
		a
			color: #fff
			text-decoration: none
			text-align: center
.sublist
	margin: 10px 0
	padding 0
	li
		padding: 5px 0
		list-style none
		a
			color: #fff
.dropdown-menu
	position: relative
	float none
	min-width 0
	background-color: transparent
	border none
	box-shadow: none
.menu-button
	@extend .hidden-lg
	font-size 20px
	padding 10px
	cursor pointer
	position absolute
	top 0
	right 0
	z-index 1000
	color #000	
.content
	@extend .col-md-10
	@extend .col-xs-12
	height 900px
	padding 0
	background-color #FFF
	
.title
	@extend .col-xs-12
	background-color #ddd
	width 100%
	padding 20px 0
	h1
		margin 0
		text-align center
.widget-form
	margin-top 80px	
	@extend .col-md-4
	@extend .col-md-offset-4
	
.widget-table
	margin-top 80px
	@extend .col-md-12
	overflow-x auto
	
.notification
	@extend .col-md-12
	padding 20px 30px
	background-color rgba(100,149,237,0.7)
	text-align center
	font-size 18px
	margin-bottom 20px
	

+breakpoint(mobile,middle)
	.logo
		&__text
			padding 24px 0
		&__img
			img
				width 50%
				margin 0 auto
	.user
		&__img
			img
				width 50%
				margin 0 auto
	.side-menu
		position absolute
		display table
		top -457	px
		padding 35px 0
		z-index 999
		height auto
		width 100%
		background-color rgba(44,71,98,0.9)
		.logo-widget
			padding 10px 0
			.logo
				padding 0
	.content
		margin-top 100px
	.user-widget
		padding 10px 0
		.user
			margin 0
	.list
		li
			width 100%
			margin 10px 0
			padding 10px
			background-color rgba(0,0,0,0.9)
			text-align center
		
+breakpoint(mobile)
	.row
		margin 0
	.logo
		&__text
			padding 24px 0
	.side-menu
		position absolute
		display table
		top -950px
		z-index 999
		background-color rgba(44,71,98,0.9)
		.logo-widget
			padding 10px 0
			.logo
				padding 0
	.content
		margin-top 100px
	.user-widget
		padding 10px 0
		.user
			margin 0
	.list
		li
			width 100%
			margin 10px 0
			padding 10px
			background-color rgba(0,0,0,0.9)
			text-align center
	